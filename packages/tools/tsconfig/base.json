{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "TS config base",
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"declaration": true
	}
}
