{
	"name": "@biso24/users-service",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"build": "nest build",
		"start": "node dist/main",
		"dev": "nest start --watch",
		"lint": "eslint --fix",
		"pretty": "prettier --write",
		"format": "eslint --fix \"src/**/*.{js,ts}\" && prettier --write \"src/**/*.{js,ts}\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"yarn lint",
			"yarn pretty"
		]
	}
}
