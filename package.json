{
	"name": "@biso24/turbo",
	"private": true,
	"workspaces": [
		"packages/services/*",
		"packages/shared/*",
		"packages/tools/*"
	],
	"dependencies": {
		"@biso24/middlewares": "*",
		"@biso24/services": "*",
		"@biso24/utils": "*",
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/microservices": "^10.2.10",
		"@nestjs/platform-express": "^10.0.0",
		"@nestjs/swagger": "^7.1.16",
		"amqp-connection-manager": "^4.1.14",
		"amqplib": "^0.10.3",
		"dotenv": "^16.3.1",
		"http-proxy-middleware": "^2.0.6",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1",
		"text-case": "^1.0.9"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/lodash": "^4.14.198",
		"@types/node": "^20.5.7",
		"commitlint-config-standard-commitlint": "*",
		"eslint-config-standard-nest": "*",
		"husky": "^8.0.0",
		"lint-staged": "^14.0.1",
		"source-map-support": "^0.5.21",
		"standard-prettier": "*",
		"ts-node-dev": "^2.0.0",
		"turbo": "latest",
		"typescript": "^4.9.5"
	},
	"scripts": {
		"prepare": "husky install",
		"pretty": "prettier --write .",
		"lint:shared": "eslint --fix \"packages/shared/**/*.{js,ts}\"",
		"lint:services": "eslint --fix \"packages/services/**/*.{js,ts}\"",
		"beauty": "eslint --fix && prettier --write",
		"dev:gateway": "turbo run dev --filter=\"./packages/shared/*\" --filter=\"./packages/services/proxy\" --filter=\"./packages/services/gateway\"",
		"build:gateway": "turbo build --filter=\"./packages/services/server\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,ts}": [
			"yarn beauty --filter=\"./packages/shared/*\"  --filter=\"./packages/services/*\""
		]
	},
	"engines": {
		"node": ">= v18.14.0",
		"npm": "please-use-yarn",
		"pnpm": "please-use-yarn",
		"yarn": ">= v1.22.19"
	}
}
