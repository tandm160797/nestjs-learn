{
	"name": "@biso24/turbo",
	"private": true,
	"workspaces": [
		"packages/modules/*",
		"packages/shared/*",
		"packages/tools/*"
	],
	"dependencies": {
		"@biso24/utils": "*",
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/lodash": "^4.14.198",
		"@types/node": "^20.5.7",
		"commitlint-config-standard-commitlint": "*",
		"eslint-config-standard-nest": "*",
		"husky": "^8.0.0",
		"lint-staged": "^14.0.1",
		"source-map-support": "^0.5.21",
		"standard-prettier": "*",
		"tsconfig": "*",
		"turbo": "latest",
		"typescript": "^4.9.5"
	},
	"scripts": {
		"prepare": "husky install",
		"pretty": "prettier --write .",
		"lint:shared": "eslint --fix \"packages/shared/**/*.{js,jsx,ts,tsx}\"",
		"lint:modules": "eslint --fix \"packages/modules/**/*.{js,jsx,ts,tsx}\"",
		"beauty": "eslint --fix && prettier --write"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"yarn beauty --filter=\"./packages/shared/*\"  --filter=\"./packages/modules/*\""
		]
	},
	"engines": {
		"node": ">= v18.14.0",
		"npm": "please-use-yarn",
		"pnpm": "please-use-yarn",
		"yarn": ">= v1.22.19"
	}
}
